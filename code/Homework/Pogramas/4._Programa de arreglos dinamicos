#include <stdio.h>
#include <string.h>

#define MAX_NOMBRE 50
#define N 3  


typedef struct {
    char nombre[MAX_NOMBRE];
    int edad;
    int calificacion;
} Persona;


float promedioEdad(Persona array[], int n) {
    int suma = 0;
    int contador = 0;
    for (int i = 0; i < n; i++) {
        suma += array[i].edad;
        contador++;
    }
    if (contador == 0) return 0;
    return (float)suma / contador;
}


float promedioCalificacion(Persona array[], int n) {
    int suma = 0;
    int contador = 0;
    for (int i = 0; i < n; i++) {
        suma += array[i].calificacion;
        contador++;
    }
    if (contador == 0) return 0;
    return (float)suma / contador;
}


void impresionInversa(Persona array[], int n) {
    for (int i = 0; i < n; i++) {
        int len = strlen(array[i].nombre);
        for (int j = len - 1; j >= 0; j--) {
            printf("%c", array[i].nombre[j]);
        }
        printf("\n"); // salto de l√≠nea por cada nombre
    }
}

int main() {
    Persona array[N] = {
        {"alan", 1, 3},
        {"erick", 15, 20},
        {"yair", 20, 29}
    };

    float resultado = promedioEdad(array, N);
    printf("Promedio edad: %.2f\n", resultado);

    float resultado1 = promedioCalificacion(array, N);
    printf("Promedio calificacion: %.2f\n", resultado1);

    printf("Nombres invertidos:\n");
    impresionInversa(array, N);

    return 0;
}
