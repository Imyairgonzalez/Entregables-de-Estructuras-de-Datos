#include <stdio.h>

// Definición de las dimensiones de la matriz
#define FILAS 3
#define COLUMNAS 3


void rows(int array[FILAS][COLUMNAS]) {
    for (int i = 0; i < FILAS; i++) {
        for (int j = 0; j < COLUMNAS; j++) {
            printf("%d ", array[i][j]);
        }
        printf("\n"); // Salto de línea al final de cada fila
    }
}


void column(int array[FILAS][COLUMNAS]) {
    for (int j = 0; j < COLUMNAS; j++) {
        for (int i = 0; i < FILAS; i++) {
            printf("%d ", array[i][j]);
        }
        printf("\n"); // Salto de línea al final de cada columna
    }
}


void diagonal(int array[FILAS][COLUMNAS]) {
    for (int i = 0; i < FILAS && i < COLUMNAS; i++) {
        printf("%d ", array[i][i]);
    }
    printf("\n"); // Salto de línea al final
}

int main() {
    int array[FILAS][COLUMNAS] = {
        {1, 2, 3},
        {4, 5, 6},
        {7, 8, 9}
    };

    printf("Filas:\n");
    rows(array);

    printf("\nColumnas:\n");
    column(array);

    printf("\nDiagonal:\n");
    diagonal(array);

    return 0;
}